@page
@model WebApp_RazorPages_Architeture.Pages.Categories.IndexModel


    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class=" col-6 text-end">
            <a asp-page="/Categories/Create"  class="btn btn-primary">
                <i class="bi bi-plus-circle">Create New Category</i>
            </a>
        </div>

    </div>

    <table class="table table-bordered table-striped">
        <thead>

            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th>Action</th>
            </tr>
   
        </thead>
        <tbody>
            @foreach (var obj in Model.categoriesList.OrderBy(x => x.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                                <a asp-page="/Categories/Edit"  asp-route-id="@obj.Id"  class="btn btn-primary mx-2">
                                Edit <i class="bi bi-pencil-square"></i>
                            </a>
                                <a asp-page="/Categories/Delete"  asp-route-id="@obj.Id"  class="btn btn-danger mx-2">
                                Delete <i class="bi bi-trash-fill"></i>
                            </a>
                              

                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>
